<%= form_with(model: [:admin, interview_template], local: true, class: "space-y-6") do |form| %>
  <% if interview_template.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= interview_template.errors.count %><%= t('templates.errors_prohibited') %>
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% interview_template.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :template_name, t('templates.template_name'), class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :template_name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: t('forms.placeholder.template_name') %>
  </div>

  <div>
    <%= form.label :description, t('templates.description'), class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 3, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: t('forms.placeholder.description') %>
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-700 mb-3"><%= t('templates.questions') %></label>
    
    <div id="questions-container">
      <%= form.fields_for :template_questions do |question_form| %>
        <%= render 'question_fields', form: question_form %>
      <% end %>
    </div>

    <div class="mt-4">
      <button type="button" id="add-question" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        <%= t('templates.add_question') %>
      </button>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to t('common.cancel'), admin_interview_templates_path(locale: I18n.locale), class: "btn-cancel inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= form.submit interview_template.new_record? ? t('templates.create_template') : t('templates.update_template'), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm bg-indigo-600 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", style: "min-width: 120px; background-color: #4F46E5; color: white; border: 1px solid #4F46E5;" %>
  </div>
<% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const addQuestionBtn = document.getElementById('add-question');
  const questionsContainer = document.getElementById('questions-container');
  let questionIndex = questionsContainer.children.length;

  addQuestionBtn.addEventListener('click', function() {
    const newQuestionHtml = `
      <div class="question-field border rounded-lg p-4 mb-4">
        <div class="flex justify-between items-start mb-4">
          <h4 class="text-sm font-medium text-gray-700">질문 ${questionIndex + 1}</h4>
          <button type="button" class="remove-question text-red-600 hover:text-red-800">
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">질문 내용</label>
            <textarea name="interview_template[template_questions_attributes][${questionIndex}][question_text]" rows="3" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="질문을 입력하세요"></textarea>
          </div>
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700">표시 순서</label>
              <input type="number" name="interview_template[template_questions_attributes][${questionIndex}][display_order]" value="${questionIndex}" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700">예상 시간 (초)</label>
              <input type="number" name="interview_template[template_questions_attributes][${questionIndex}][estimated_time_seconds]" placeholder="300" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            </div>
          </div>
        </div>
      </div>
    `;
    
    questionsContainer.insertAdjacentHTML('beforeend', newQuestionHtml);
    questionIndex++;
  });

  // Handle remove question
  questionsContainer.addEventListener('click', function(e) {
    if (e.target.closest('.remove-question')) {
      const questionField = e.target.closest('.question-field');
      
      // Check if this is an existing question (has an ID field)
      const idField = questionField.querySelector('input[name*="[id]"]');
      if (idField) {
        // Add destroy field for existing records
        const destroyField = document.createElement('input');
        destroyField.type = 'hidden';
        destroyField.name = idField.name.replace('[id]', '[_destroy]');
        destroyField.value = '1';
        questionField.appendChild(destroyField);
        questionField.style.display = 'none';
      } else {
        // Remove new questions completely
        questionField.remove();
      }
    }
  });
});
</script>