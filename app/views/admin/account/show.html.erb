<% content_for :page_title, t('account.title') %>

<!-- Account Settings Header -->
<div class="bg-gradient-to-r from-slate-50 to-blue-50 rounded-xl p-8 mb-8 border border-slate-200">
  <div class="flex items-center space-x-4">
    <div class="w-16 h-16 bg-gradient-to-br from-blue-100 to-indigo-100 rounded-full flex items-center justify-center">
      <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
      </svg>
    </div>
    <div>
      <h1 class="text-3xl font-light text-slate-800 mb-2"><%= t('account.title') %></h1>
      <p class="text-slate-600"><%= t('account.subtitle') %></p>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Profile Settings -->
  <div class="lg:col-span-2">
    <div class="bg-white rounded-xl shadow-sm border border-slate-200">
      <div class="px-6 py-5 border-b border-slate-200">
        <h3 class="text-lg font-semibold text-slate-800"><%= t('account.profile_settings') %></h3>
        <p class="text-sm text-slate-600 mt-1"><%= t('account.profile_description') %></p>
      </div>
      
      <div class="p-6">
        <%= form_with(model: @user, url: admin_account_path, method: :patch, local: true, class: "space-y-6") do |form| %>
          <% if @user.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    <%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div>
            <%= form.label :email, t('account.email'), class: "block text-sm font-medium text-slate-700 mb-2" %>
            <%= form.email_field :email, class: "w-full px-4 py-3 border border-slate-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('forms.placeholder.email') %>
          </div>

          <div>
            <%= form.label :preferred_locale, t('account.preferred_language'), class: "block text-sm font-medium text-slate-700 mb-2" %>
            <%= form.select :preferred_locale, 
                            options_for_select([
                              [t('account.korean'), 'ko'],
                              [t('account.english'), 'en']
                            ], @user.preferred_locale),
                            {},
                            { class: "w-full px-4 py-3 border border-slate-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
            <p class="mt-2 text-sm text-slate-500"><%= t('account.language_description') %></p>
          </div>

          <div class="border-t border-slate-200 pt-6">
            <h4 class="text-lg font-medium text-slate-800 mb-4"><%= t('account.change_password') %></h4>
            <div class="space-y-4">
              <div>
                <%= form.label :current_password, t('account.current_password'), class: "block text-sm font-medium text-slate-700 mb-2" %>
                <%= form.password_field :current_password, class: "w-full px-4 py-3 border border-slate-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('account.current_password_placeholder') %>
                <p class="mt-1 text-sm text-slate-500"><%= t('account.current_password_help') %></p>
              </div>
              
              <div>
                <%= form.label :password, t('account.new_password'), class: "block text-sm font-medium text-slate-700 mb-2" %>
                <%= form.password_field :password, class: "w-full px-4 py-3 border border-slate-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('account.new_password_placeholder') %>
                <p class="mt-1 text-sm text-slate-500"><%= t('account.password_help') %></p>
              </div>
              
              <div>
                <%= form.label :password_confirmation, t('account.confirm_password'), class: "block text-sm font-medium text-slate-700 mb-2" %>
                <%= form.password_field :password_confirmation, class: "w-full px-4 py-3 border border-slate-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: t('account.confirm_password_placeholder') %>
              </div>
            </div>
          </div>

          <div class="flex justify-end space-x-3 pt-6 border-t border-slate-200">
            <%= link_to admin_root_path, class: "inline-flex items-center px-6 py-3 border border-slate-300 rounded-lg shadow-sm bg-white text-sm font-medium text-slate-700 hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              <%= t('common.back') %>
            <% end %>
            <%= form.submit t('account.save_changes'), class: "inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm bg-gradient-to-r from-blue-600 to-indigo-600 text-sm font-medium text-white hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Account Information Sidebar -->
  <div class="space-y-6">
    <!-- Account Status -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200">
      <div class="px-6 py-5 border-b border-slate-200">
        <h3 class="text-lg font-semibold text-slate-800"><%= t('account.account_status') %></h3>
      </div>
      <div class="p-6 space-y-4">
        <div class="flex items-center justify-between">
          <span class="text-sm text-slate-600"><%= t('account.account_type') %></span>
          <span class="px-3 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
            <%= t('account.administrator') %>
          </span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-slate-600"><%= t('account.member_since') %></span>
          <span class="text-sm font-medium text-slate-800">
            <%= @user.created_at.strftime("%B %Y") %>
          </span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-slate-600"><%= t('account.last_sign_in') %></span>
          <span class="text-sm font-medium text-slate-800">
            <%= @user.last_sign_in_at ? time_ago_in_words(@user.last_sign_in_at) + " " + t('dashboard.ago') : t('account.never') %>
          </span>
        </div>
      </div>
    </div>

    <!-- Quick Stats -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200">
      <div class="px-6 py-5 border-b border-slate-200">
        <h3 class="text-lg font-semibold text-slate-800"><%= t('account.quick_stats') %></h3>
      </div>
      <div class="p-6 space-y-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <span class="text-sm text-slate-600"><%= t('nav.templates') %></span>
          </div>
          <span class="text-lg font-semibold text-slate-800"><%= @user.created_interview_templates.count %></span>
        </div>
      </div>
    </div>
  </div>
</div>