<% content_for :page_title, "Dashboard" %>

<!-- Welcome Header -->
<div class="bg-gradient-to-r from-slate-50 to-blue-50 rounded-xl p-8 mb-8 border border-slate-200">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-light text-slate-800 mb-2"><%= t('dashboard.title') %></h1>
      <p class="text-slate-600"><%= t('dashboard.subtitle') %></p>
    </div>
    <div class="hidden md:block">
      <div class="w-20 h-20 bg-gradient-to-br from-blue-100 to-indigo-100 rounded-full flex items-center justify-center">
        <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
    </div>
  </div>
</div>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-md transition-shadow">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <span class="text-xs font-medium text-slate-500 bg-slate-100 px-2 py-1 rounded-full"><%= t('nav.templates') %></span>
    </div>
    <h3 class="text-sm font-medium text-slate-600 mb-1"><%= t('dashboard.templates_count') %></h3>
    <p class="text-2xl font-bold text-slate-800"><%= @templates_count %></p>
    <p class="text-xs text-slate-500 mt-1"><%= t('dashboard.total_templates') %></p>
  </div>
  
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-md transition-shadow">
    <div class="flex items-center justify-between mb-4">
      <div class="w-12 h-12 bg-emerald-50 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
        </svg>
      </div>
      <span class="text-xs font-medium text-emerald-600 bg-emerald-100 px-2 py-1 rounded-full"><%= t('nav.interviews') %></span>
    </div>
    <h3 class="text-sm font-medium text-slate-600 mb-1"><%= t('dashboard.interviews_count') %></h3>
    <p class="text-2xl font-bold text-slate-800"><%= @interviews_count %></p>
    <p class="text-xs text-slate-500 mt-1"><%= t('dashboard.total_interviews') %></p>
  </div>
  
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 hover:shadow-md transition-shadow">
    <div class="mb-4">
      <h3 class="text-sm font-medium text-slate-600 mb-3"><%= t('dashboard.quick_actions') %></h3>
    </div>
    <div class="space-y-3">
      <%= link_to new_admin_interview_template_path(locale: I18n.locale), class: "flex items-center justify-center w-full bg-gradient-to-r from-blue-500 to-blue-600 text-white py-2.5 px-4 rounded-lg hover:from-blue-600 hover:to-blue-700 transition-all duration-200 text-sm font-medium" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
<%= t('dashboard.new_template') %>
      <% end %>
      <%= link_to new_admin_interview_path(locale: I18n.locale), class: "flex items-center justify-center w-full bg-gradient-to-r from-emerald-500 to-emerald-600 text-white py-2.5 px-4 rounded-lg hover:from-emerald-600 hover:to-emerald-700 transition-all duration-200 text-sm font-medium" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
        </svg>
<%= t('dashboard.new_interview') %>
      <% end %>
    </div>
  </div>
</div>

<!-- Recent Interviews -->
<div class="bg-white rounded-xl shadow-sm border border-slate-200">
  <div class="px-6 py-5 border-b border-slate-200">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-semibold text-slate-800"><%= t('dashboard.recent_interviews') %></h3>
      <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    </div>
  </div>
  <div class="p-6">
    <% if @recent_interviews.any? %>
      <div class="space-y-4">
        <% @recent_interviews.each_with_index do |interview, index| %>
          <div class="group bg-slate-50 hover:bg-slate-100 rounded-lg p-4 transition-colors border border-slate-100">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <div class="flex items-center mb-2">
                  <div class="w-8 h-8 bg-gradient-to-br from-blue-100 to-indigo-100 rounded-full flex items-center justify-center mr-3">
                    <span class="text-xs font-semibold text-blue-600"><%= index + 1 %></span>
                  </div>
                  <h4 class="font-medium text-slate-800"><%= interview.interviewee_name %></h4>
                </div>
                <div class="ml-11">
                  <p class="text-sm text-slate-600 mb-1">
                    <%= interview.created_from_template&.template_name || t('public.custom_interview') %>
                  </p>
                  <div class="flex items-center text-xs text-slate-500">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <%= time_ago_in_words(interview.created_at) %> <%= t('dashboard.ago') %>
                  </div>
                </div>
              </div>
              <div class="flex items-center space-x-3">
                <span class="px-3 py-1 text-xs font-medium rounded-full <%= interview.status == 'completed' ? 'bg-emerald-100 text-emerald-700' : interview.status == 'in_progress' ? 'bg-amber-100 text-amber-700' : 'bg-slate-100 text-slate-600' %>">
                  <%= case interview.status
                      when 'completed' then t('status.completed')
                      when 'in_progress' then t('status.in_progress')
                      else t('status.pending')
                      end %>
                </span>
                <%= link_to admin_interview_path(interview, locale: I18n.locale), class: "inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-700 transition-colors" do %>
<%= t('common.view') %>
                  <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
          </svg>
        </div>
        <p class="text-slate-600 mb-3"><%= t('dashboard.no_interviews') %></p>
        <%= link_to new_admin_interview_path(locale: I18n.locale), class: "inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-700" do %>
<%= t('dashboard.create_first_interview') %>
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
</div>