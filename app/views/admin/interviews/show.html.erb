<% content_for :page_title, "Interview: #{@interview.interviewee_name}" %>

<div class="mb-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @interview.interviewee_name %></h1>
      <p class="mt-2 text-gray-600">
        <% if @interview.created_from_template.present? %>
          Template: <%= @interview.created_from_template.template_name %>
        <% else %>
          Custom Interview
        <% end %>
      </p>
    </div>
    <div class="space-x-2">
      <%= link_to "Edit Interview", edit_admin_interview_path(@interview), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
      <%= link_to "Back to Interviews", admin_interviews_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
    </div>
  </div>
</div>

<!-- Interview Info -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold text-gray-800 mb-2">Status</h3>
    <span class="px-3 py-1 text-sm rounded-full <%= @interview.status == 'completed' ? 'bg-green-100 text-green-800' : @interview.status == 'in_progress' ? 'bg-yellow-100 text-yellow-800' : @interview.status == 'expired' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
      <%= @interview.status.humanize %>
    </span>
  </div>
  
  <div class="bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold text-gray-800 mb-2">Progress</h3>
    <% answered_count = @interview.answers.count %>
    <% total_questions = @interview_questions.count %>
    <p class="text-3xl font-bold text-blue-600"><%= answered_count %>/<%= total_questions %></p>
    <p class="text-sm text-gray-600">Questions answered</p>
  </div>
  
  <div class="bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold text-gray-800 mb-2">Public Link</h3>
    <div class="flex items-center space-x-2">
      <input type="text" readonly value="<%= public_interview_url(@interview.unique_link_id) %>" 
             class="flex-1 text-xs bg-gray-50 border border-gray-300 rounded px-2 py-1">
      <button onclick="copyToClipboard('<%= public_interview_url(@interview.unique_link_id) %>')" 
              class="bg-blue-500 text-white px-2 py-1 rounded text-xs hover:bg-blue-600">
        Copy
      </button>
    </div>
  </div>
</div>

<!-- Questions and Answers -->
<div class="bg-white rounded-lg shadow">
  <div class="p-6 border-b">
    <h3 class="text-lg font-semibold text-gray-800">Questions & Answers</h3>
  </div>
  
  <div class="p-6">
    <% if @interview_questions.any? %>
      <div class="space-y-6">
        <% @interview_questions.each_with_index do |question, index| %>
          <div class="border rounded-lg p-4">
            <div class="flex justify-between items-start mb-4">
              <div class="flex-1">
                <h4 class="font-medium text-gray-900 mb-2">
                  Question <%= index + 1 %>
                </h4>
                <p class="text-gray-700"><%= question.question_text %></p>
              </div>
              
              <% if question.answer.present? %>
                <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded-full">
                  Answered
                </span>
              <% else %>
                <span class="px-2 py-1 text-xs bg-gray-100 text-gray-800 rounded-full">
                  No answer
                </span>
              <% end %>
            </div>
            
            <% if question.answer.present? %>
              <div class="mt-4 p-4 bg-gray-50 rounded">
                <div class="flex items-center justify-between mb-3">
                  <h5 class="font-medium text-gray-800">Answer</h5>
                  <span class="px-2 py-1 text-xs rounded-full <%= question.answer.stt_status == 'completed' ? 'bg-green-100 text-green-800' : question.answer.stt_status == 'processing' ? 'bg-yellow-100 text-yellow-800' : question.answer.stt_status == 'failed' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                    STT: <%= question.answer.stt_status.humanize %>
                  </span>
                </div>
                
                <% if question.answer.audio_file.attached? %>
                  <div class="mb-3">
                    <audio controls class="w-full">
                      <source src="<%= rails_blob_path(question.answer.audio_file) %>" type="<%= question.answer.audio_file.content_type %>">
                      Your browser does not support the audio element.
                    </audio>
                  </div>
                <% end %>
                
                <% if question.answer.transcript_result.present? %>
                  <div class="mt-3">
                    <h6 class="text-sm font-medium text-gray-700 mb-2">Transcript:</h6>
                    <p class="text-sm text-gray-600 bg-white p-3 rounded border">
                      <%= question.answer.transcript_result['text'] %>
                    </p>
                  </div>
                <% end %>
                
                <% if question.answer.stt_status == 'pending' || question.answer.stt_status == 'failed' %>
                  <div class="mt-3">
                    <%= link_to "Retry Transcription", transcribe_answer_admin_interview_path(@interview, answer_id: question.answer.id), 
                                method: :post, class: "bg-blue-500 text-white px-3 py-1 rounded text-sm hover:bg-blue-600" %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-600 text-center py-8">No questions in this interview.</p>
    <% end %>
  </div>
</div>

<script>
function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(function() {
    alert('Link copied to clipboard!');
  }, function(err) {
    console.error('Could not copy text: ', err);
  });
}
</script>