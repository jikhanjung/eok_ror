<% content_for :page_title, t('interviews.title') %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900"><%= t('interviews.title') %></h1>
  <%= link_to t('interviews.new_interview'), new_admin_interview_path(locale: I18n.locale), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <% if @interviews.any? %>
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('interviews.interviewee') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('interviews.template') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('interviews.status') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('interviews.progress') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('interviews.created') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('common.actions') %></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @interviews.each do |interview| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div>
                <div class="text-sm font-medium text-gray-900"><%= interview.interviewee_name %></div>
                <% if interview.interviewee_email.present? %>
                  <div class="text-sm text-gray-500"><%= interview.interviewee_email %></div>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= interview.created_from_template&.template_name || t('interviews.custom_interview') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs rounded-full <%= interview.status == 'completed' ? 'bg-green-100 text-green-800' : interview.status == 'in_progress' ? 'bg-yellow-100 text-yellow-800' : interview.status == 'expired' ? 'bg-red-100 text-red-800' : 'bg-gray-100 text-gray-800' %>">
                <%= t("status.#{interview.status}") %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <% answered_count = interview.answers.count %>
              <% total_questions = interview.interview_questions.count %>
              <%= answered_count %>/<%= total_questions %> <%= t('interviews.answered') %>
              <% if total_questions > 0 %>
                <div class="w-full bg-gray-200 rounded-full h-2 mt-1">
                  <div class="bg-blue-600 h-2 rounded-full" style="width: <%= (answered_count.to_f / total_questions * 100).round %>%"></div>
                </div>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= time_ago_in_words(interview.created_at) %> <%= t('dashboard.ago') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
              <%= link_to t('common.view'), admin_interview_path(interview, locale: I18n.locale), class: "text-indigo-600 hover:text-indigo-900" %>
              <%= link_to t('common.edit'), edit_admin_interview_path(interview, locale: I18n.locale), class: "text-green-600 hover:text-green-900" %>
              <%= link_to t('common.delete'), admin_interview_path(interview, locale: I18n.locale), 
                          data: { confirm: t('messages.confirm_delete'), turbo_method: :delete }, 
                          class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="p-6 text-center">
      <p class="text-gray-600 mb-4"><%= t('interviews.no_interviews') %></p>
      <%= link_to t('interviews.create_first_interview'), new_admin_interview_path(locale: I18n.locale), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>