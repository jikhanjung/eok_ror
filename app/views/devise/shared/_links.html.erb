<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "로그인", new_session_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %>
  <% end %>

  <%# Registration link removed - registrations are disabled for this admin-only system %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "비밀번호를 잊으셨나요?", new_password_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "확인 이메일을 받지 못하셨나요?", new_confirmation_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "계정 잠금 해제 이메일을 받지 못하셨나요?", new_unlock_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}로 로그인", omniauth_authorize_path(resource_name, provider), 
                    data: { turbo: false }, class: "w-full bg-gray-200 text-gray-800 py-2 px-4 rounded hover:bg-gray-300" %>
    <% end %>
  <% end %>
</div>
